@model HpTuningInc.Models.Events
@{
    ViewBag.Title = "Create";
}

<h2>HpTuningInc</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Set Appointment Here</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @if (User.IsInRole("Customer"))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Title, "Full Name", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-7">
                    <p>Ex: Full Name</p>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-7">
                    <p>Ex: Year Make Model - Color - What You Need Done</p>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.StartAt, "Drop Of Date", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.StartAt, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.StartAt, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-7">
                    <p>Drop Off Ex: MM/DD/YYYY</p>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.EndAt, "Pick Up Date", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.EndAt, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EndAt, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-7">
                    <p>Pick Up By Ex: MM/DD/YY HH:MM:00AM</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
            </div>
        }
        else
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Title, "Full Name", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-7">
                    <p>Ex: Full Name</p>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-7">
                    <p>Ex: Year Make Model - Color - What You Need Done - And Date</p>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.StartAt, "Drop Of Date", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.StartAt, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.StartAt, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-7">
                    <p>Drop Off Ex: MM/DD/YYYY</p>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.EndAt, "Pick Up Date", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.EndAt, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EndAt, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-7">
                    <p>Pick Up By Ex: MM/DD/YY HH:MM:00AM</p>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
