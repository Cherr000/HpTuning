
@{
    ViewBag.Title = "Index";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img height="400" width="1200" src="~/Content/Img/cc-banner.jpg" alt="Image">
            <div class="carousel-caption">
                <h3>HPTuning Inc</h3>
            </div>
        </div>
    </div>
</div>

<div class="container text-center">
    <h3>HI, @User.Identity.Name</h3><br>
    <div class="row">
        <div class="col-sm-4">
            <h3>PLEASE CLOCK IN OR OUT</h3>
            <button type="button" class="btn btn-default" onclick="window.location.href='@Url.Action("ClockIn", "Employee")';">Clock In</button>
            <button type="button" class="btn btn-default" onclick="window.location.href='@Url.Action("ClockOut", "Employee")';">Clock Out</button>
            <button type="button" class="btn btn-default" onclick="window.location.href='@Url.Action("TimeClock", "Employee")';">TimeCard</button>
        </div>
        <div class="col-sm-4">
            <a href="https://www.accuweather.com/en/us/milwaukee-wi/53202/weather-forecast/351543" class="aw-widget-legal">
